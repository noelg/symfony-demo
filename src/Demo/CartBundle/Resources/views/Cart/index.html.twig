{% extends "::base.html.twig" %}

{% block assets %}
  <link rel="stylesheet" href="{{ asset("bundles/cart/css/cart.css") }}" />
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js" type="text/javascript"></script>
  <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/jquery-ui.min.js" type="text/javascript"></script>
  <script src="{{ asset("bundles/cart/js/cart.js") }}" type="text/javascript"></script>
{% endblock %}

{% block title %}Symfony2 store demo{% endblock %}

{% block body %}

<h1>Symfony Apple store demo</h1>

<div id="shopping_cart">
  <h2>Products:</h2>

  <div id="product_list">
    {% for id, title in products %}
      <a title="Add this item" href="{{ path('cart_add', {'id': id}) }}" style="display:inline-block">
        <img alt="" src="{{ asset('bundles/cart/images/' ~ id ~ '.png') }}" class="products" id="product_{{ id }}" />
      </a>
    {% endfor %}
  </div>

  <h2>Cart:</h2>

  <div id="wastebin" style="float:right">
    <img id="wastebin" src="{{ asset('bundles/cart/images/trash.png') }}" alt="" />
  </div>


  <div id="cart" class="cart">
    <div id="items">
      {% include 'CartBundle:Cart:cart.html.twig' with {'cart': cart, 'products': products} %}
    </div>
    <div style="clear: both"></div>
  </div>

  <p>Images are the courtesy of <a href="http://www.iconspedia.com">iconspedia</a>.</p>
</div>
{% endblock %}