<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://www.symfony-project.org/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.symfony-project.org/schema/routing http://www.symfony-project.org/schema/routing/routing-1.0.xsd">

  <route id="cart" pattern="/cart">
	<default key="_controller">CartBundle:Cart:index</default>
  </route>
  
  <route id="cart_add" pattern="/cart/add/:id">
	<default key="_controller">CartBundle:Cart:add</default>
  </route>
  
  <route id="cart_remove" pattern="/cart/remove/:id">
	<default key="_controller">CartBundle:Cart:remove</default>
  </route>
</routes>
